@using SmartEdu.Models.ORM.Entity
@model Post
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <style>
        .editor-field .form-group textarea {
            width: 750px;
            height: 180px;
            resize:none
        }
    </style>

</head>


@using (Html.BeginForm("YazıDüzenle","AdminPanel",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center; color:black; font-size:32px;"> İçerik Güncelleme </h4>

        <hr style="border:2px solid; border-radius:2px; color:darkcyan"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(Post => Post.ID)

        <div class="form-group">
            @Html.LabelFor(Post => Post.Baslik, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(Post => Post.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(Post => Post.Baslik, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="editor-field">
            <div class="form-group">
                @Html.LabelFor(Post => Post.İcerik, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(Post => Post.İcerik, new { htmlAttributes = new { @class = "form-control", @rows=3, @cols=3 } })
                    @Html.ValidationMessageFor(Post => Post.İcerik, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Post => Post.ResimID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(Post => Post.ResimID, new { htmlAttributes = new { @class = "form-control", @readOnly="readOnly"} })
                @Html.ValidationMessageFor(Post => Post.ResimID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>

        <div class="btn btn-default" style=" font-size:18px; color:black">
            @Html.ActionLink("Geri Dön", "Yazılar")
        </div>
    </div>

   
}

