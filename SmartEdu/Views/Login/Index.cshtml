@model SmartEdu.Models.Login.LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Giriş Yap | 01 Özel Ders Admin Paneli</title>
    <!-- Favicon-->
    <link rel="icon" href="@Url.Content("~/Content/Login/favicon.ico")" type="image/x-icon">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="@Url.Content("~/Content/Login/css/bootstrap.css")" rel="stylesheet">
   
    <!-- Waves Effect Css -->
    <link href="@Url.Content("~/Content/Login/css/waves.css")" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="@Url.Content("~/Content/Login/css/animate.css")" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="@Url.Content("~/Content/Login/css/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Login/css/materialize.css")" rel="stylesheet" />

    <style>
        .field-validation-error{

            color:crimson
        }
    </style>
</head>


<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <br />
            <a href="javascript:void(0);"><b>01 Özel Ders</b></a>
            <small>Admin Giriş Paneli</small>
            <br />
        </div>
        <div class="card">
            <div class="body">

                @using (Html.BeginForm("Index", "Login"))
                {
                    <br /><br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons col-pink">person</i>
                        </span>

                        <div class="form-line">
                            @Html.TextBoxFor(x => x.Email,new { @class="form-control", @placeholder="E-mail" ,@autofocus="autofocus"})
                           
                            @*<input type="text" class="form-control" name="username" placeholder="E-mail" required autofocus>*@
                        </div>
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons col-pink">lock</i>
                        </span>

                        <div class="form-line">
                            @Html.PasswordFor(x => x.Sifre, new { @class="form-control", @placeholder="Şifre" })
                                
                            @*<input type="password" class="form-control" name="password" placeholder="Şifre" required>*@
                        
                        </div>
                        @Html.ValidationMessageFor(x => x.Sifre)
                    </div>
                    <div class="row">
                        <br />
                        <div class="col-xs-12">
                            <button class="btn btn-block bg-pink waves-effect" type="submit">Giriş Yap</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>