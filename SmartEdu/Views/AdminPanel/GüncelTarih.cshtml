@using SmartEdu.Models.ORM.Entity
@model Zamanlayıcı

@{
    ViewBag.Title = "GüncelTarih";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




@using (Html.BeginForm("TarihGüncelle", "AdminPanel", FormMethod.Post))

{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center; color:black; font-size:32px;"> Tarih Güncelleme </h4>

        <hr style="border:1.5px solid; border-radius:1px; color:darkcyan" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(Zamanlayıcı => Zamanlayıcı.ID)

        <br />
        <br />

        <div class="form-group">
            @Html.LabelFor(Zamanlayıcı => Zamanlayıcı.sayacadı, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(Zamanlayıcı => Zamanlayıcı.sayacadı, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(Zamanlayıcı => Zamanlayıcı.sayacadı, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(Zamanlayıcı => Zamanlayıcı.tarih, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(Zamanlayıcı => Zamanlayıcı.tarih, new { htmlAttributes = new { @class = "form-control" } })
                <label style="opacity:0.5">Örn: 04.04.2019 13:58:00</label>
                @Html.ValidationMessageFor(Zamanlayıcı => Zamanlayıcı.tarih, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding-top:10px">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>

        <div style="padding-left:30px;padding-bottom:20px">
            <div class="btn btn-default" style=" font-size:16px; color:black">
                @Html.ActionLink("Geri Dön", "Tarih")
            </div>
        </div>

    </div>
}

