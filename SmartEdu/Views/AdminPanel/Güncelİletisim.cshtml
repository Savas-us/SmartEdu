@using SmartEdu.Models.ORM.Entity
@model İletisim
@{
    ViewBag.Title = "Güncelİletisim";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("İletisimGüncelle", "AdminPanel", FormMethod.Post))

{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center; color:black; font-size:32px;"> İletisim Güncelleme </h4>

        <hr style="border:1.5px solid; border-radius:1px; color:darkcyan" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(İletisim => İletisim.ID)

        <br />
        <br />

        <div class="form-group">
            @Html.LabelFor(İletisim => İletisim.Telefon, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(İletisim => İletisim.Telefon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(İletisim => İletisim.Telefon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(İletisim => İletisim.Adres, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(İletisim => İletisim.Adres, new { @class = "ckeditor", @ValidateRequestMode = "Enabled" })
                @Html.ValidationMessageFor(İletisim => İletisim.Adres, "", new { @class = "text-danger" })
            </div>
        </div>

